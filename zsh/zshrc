#### Using system clipboard ####
yanktoclipboard(){
    if [[ "$OS_NAME" == "Darwin" ]]; then
        echo "$BUFFER" | pbcopy
    elif command -v xsel >/dev/null 2>&1; then
        echo "$BUFFER" | xsel -i -b
    elif command -v xclip >/dev/null 2>&1; then
        echo "$BUFFER" | xclip -selection clipboard
    fi
}
pastefromclipboard(){
    if [[ "$OS_NAME" == "Darwin" ]]; then
        RBUFFER="$(pbpaste)$RBUFFER"
    elif command -v xsel >/dev/null 2>&1; then
        RBUFFER="$(xsel -o -b </dev/null)$RBUFFER"
    elif command -v xclip >/dev/null 2>&1; then
        RBUFFER="$(xclip -selection clipboard -o </dev/null)$RBUFFER"
    fi
}
zle -N yanktoclipboard
zle -N pastefromclipboard
bindkey -a 'yy' yanktoclipboard
bindkey -a 'p' pastefromclipboard


